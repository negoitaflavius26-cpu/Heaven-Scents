    <main >
    <h1>Dashboard</h1>
    <div class="magazin-statistici">
        <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" width="640" height="480" src="https://charts.mongodb.com/charts-project-0-aymoh/embed/charts?id=649bdf81-0d9c-408b-854d-56754436fa1c&maxDataAge=1&theme=light&autoRefresh=true"></iframe>
        <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" width="640" height="480" src="https://charts.mongodb.com/charts-project-0-aymoh/embed/charts?id=649be6c9-c10f-4db2-8f3b-868a8a18fe58&maxDataAge=1&theme=light&autoRefresh=true"></iframe>
        <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" width="640" height="480" src="https://charts.mongodb.com/charts-project-0-aymoh/embed/charts?id=649be8ae-7221-41ef-840a-cf4ae3c89f37&maxDataAge=1&theme=light&autoRefresh=true"></iframe>
    </div>
    <h1>Activitate recenta</h1>
    <div class="preferate">
        <h2 style="text-align: center;">Preferate</h2>
        <span class="linie"></span>
  {{#each preferate}}
  <div class="preferate-item">
    <div class="poza-produs">
        {{#each this.produse}}
       <img class="poza" src="{{this.picture}}" alt="{{this.title}}">
    {{/each}}
    </div>
    <p class="email">{{this.email}} a adaugat produsul{{#each this.produse}} {{this.title}} la favorite {{/each}}</p>
    </div>
    {{/each }}
    <h2 style="text-align: center;">Cumparate</h2>
    <span class="linie"></span>
  {{#each cumparate}}
    <div class="preferate-item">
    <div class="poza-produs">
        {{#each this.produse}}
       <img class="poza" src="{{this.produse.picture}}" alt="{{this.produse.title}}">
    {{/each}}
    </div>
    <p class="email">{{this.email}} a cumparat{{#each this.produse}} {{this.produse.title}}  {{/each}}</p>
    </div>
  {{/each }}
  
  </div>
    </main>
</body>
