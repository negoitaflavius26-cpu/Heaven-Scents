<script>
  $('#lineDetails h4').click(function() {
  var target = $(this).data('target');
  var $targetPara = $(target);

  // Check if target paragraph is already visible
  if ($targetPara.hasClass('hidden')) {
    // Hide all other visible paragraphs within lineDetails
    $('#lineDetails .detail:not(' + target + ')').addClass('hidden');

    // Show target paragraph
    $targetPara.removeClass('hidden');
  } else {
    // Target paragraph is already visible, so hide it
    $targetPara.addClass('hidden');
  }
});
</script>




