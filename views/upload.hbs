<script>
    // Get references to the file input and the preview image element
    const input = document.getElementById('input-file');
    const previewImage = document.getElementById('preview-image');

    // Add an event listener to the file input's change event
    input.addEventListener('change', function(event) {
        const file = event.target.files[0]; // Get the selected file
        
        // Make sure a file was selected
        if (file) {
            const reader = new FileReader(); // Create a FileReader object
            
            // Set up the FileReader's load event
            reader.onload = function(e) {
                previewImage.src = e.target.result; // Update the preview image's src
            };
            
            // Read the selected file as a data URL (base64 encoded)
            reader.readAsDataURL(file);
        }
    });
</script>
